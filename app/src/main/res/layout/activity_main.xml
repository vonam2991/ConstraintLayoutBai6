<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <android.support.constraint.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="20dp" />

    <TextView
        android:id="@+id/txt4"
        android:layout_width="95dp"
        android:layout_height="wrap_content"
        android:text="4"
        android:textSize="40dp"
        android:background="#9C27B0"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/guideline"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt3"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="3"
        android:textSize="40dp"
        android:background="#8BC34A"
        android:gravity="center"
        app:layout_constraintRight_toLeftOf="@id/txt4"
        app:layout_constraintBottom_toTopOf="@id/txt4" />

    <TextView
        android:id="@+id/txt2"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="2"
        android:textSize="40dp"
        android:background="#4CAF50"
        android:gravity="center"
        app:layout_constraintRight_toLeftOf="@id/txt3"
        app:layout_constraintBottom_toTopOf="@id/txt3" />

    <TextView
        android:id="@+id/txt1"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="1"
        android:textSize="40dp"
        android:background="#F44336"
        android:gravity="center"
        app:layout_constraintRight_toLeftOf="@id/txt2"
        app:layout_constraintBottom_toTopOf="@id/txt2" />

    <TextView
        android:id="@+id/txt5"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:background="#CC5F57"
        android:gravity="center"
        android:text="5"
        android:textSize="40dp"
        app:layout_constraintEnd_toStartOf="@+id/txt4"
        app:layout_constraintTop_toBottomOf="@+id/txt4" />

    <TextView
        android:id="@+id/txt6"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:background="#683C39"
        android:gravity="center"
        android:text="6"
        android:textSize="40dp"
        app:layout_constraintEnd_toStartOf="@+id/txt5"
        app:layout_constraintTop_toBottomOf="@+id/txt5" />

    <TextView
        android:id="@+id/txt7"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:background="#03A9F4"
        android:gravity="center"
        android:text="7"
        android:textSize="40dp"
        app:layout_constraintEnd_toStartOf="@+id/txt6"
        app:layout_constraintTop_toBottomOf="@+id/txt6" />
</android.support.constraint.ConstraintLayout>